@page
@model SalilWeb.Pages.Admin.FoodTypes.IndexModel

@* <partial name="_Notification" /> *@
<div class="container p-3">
    <div class ="row p-4">
        <div class=" col-6">
            <h2 class="text-primary"> Food Type List </h2>
        </div>
        <div class="col-6 text-end">
          <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Create New FoodType
          </a>
        </div>
    </div>

    <br /> <br />

    <table class ="table table-bordered table-striped style=width"100%">
        <thead>
            <tr>
                <th>
                  Food Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fdt in Model.foodType)
            {
                <tr>
                    <td width="50%">@fdt.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@fdt.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                            <a asp-page="Delete" asp-route-id="@fdt.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
