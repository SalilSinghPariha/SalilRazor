@page
@model SalilWeb.Pages.Admin.Categories.EditModel

<form method="post">
    <input hidden asp-for="@Model.Category.Id" />
    <div class="border p-3 mt-4">
        
     <div class="row pd-2">
      <h2 class="text-primary pl-3">
          Edit Category
      </h2>
      <hr />
     </div>
     <div asp-validation-summary="All"> </div>
       <div class="mb-3">
           
           @* this is directly we can call model properties as input and use same while saving as well which will make job easier *@
            <label asp-for="@Model.Category.Name"> </label>
            <input asp-for="@Model.Category.Name" class = "form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"> </span>
       </div>
       <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"> </label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"> </span>
       </div>
       <button type ="submit" class="btn btn-primary" style="width:150px;">
           update
       </button>
       <a asp-page ="Index" class ="btn btn-secondary" style="width:150px;"> Back to List</a>
    </div>
</form>

@section scripts{
    @{
    <Partial name="_ValidationScriptsPartial"/>
}
}
